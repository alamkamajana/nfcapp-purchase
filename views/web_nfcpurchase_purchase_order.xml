                <section id="sectionPayments" style="display: none;">
                    <table class="table table-hover align-middle mt-4">
                        <thead>
                            <tr>
                                <th class="text-center">No</th>
                                <th>Name</th>
                                <th>Kind</th>
                                <th>Source</th>
                                <th class="text-end">Amount</th>
                                <th>Type</th>
                                <th>Note</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-set="idx" t-value="1"/>
                            <t t-set="money_entries_total" t-value="0"/>
                            <t t-foreach="money_entries" t-as="money">
                                <tr>
                                    <td class="text-center">
                                        <span t-esc="idx"/>
                                    </td>
                                    <td>
                                        <span t-esc="money.number"/>
                                    </td>
                                    <td>
                                        <t t-if="money.purchase_order_id">Purchase</t>
                                        <t t-else="">Cash</t>
                                    </td>
                                    <td>
                                        <span t-esc="po.name"/>
                                    </td>
                                    <td class="text-end">Rp
                                        <span t-esc="money.amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td>
                                        <t t-if="money.amount &lt; 0">Credit</t>
                                        <t t-else="">Debit</t>
                                    </td>
                                    <td>
                                        <span t-esc="money.note"/>
                                    </td>
                                </tr>
                                <t t-set="idx" t-value="idx + 1"/>
                                 <t t-set="money_entries_total" t-value="money_entries_total+money.amount"/>
                            </t>
                        </tbody>
                        <tfoot>
