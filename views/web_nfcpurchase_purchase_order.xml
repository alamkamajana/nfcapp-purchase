        <body>
            <t t-set="po_odoo"
               t-value="request.env['purchase.order'].browse(purchase_event.purchase_order_odoo_true_id)"/>
            <t t-set="farmer" t-value="purchase_order.farmer_odoo_true_id"/>
            <t t-set="po" t-value="purchase_order"/>

            <div class="container mt-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a t-attf-href="/nfcpurchase/view/purchase-event/{{purchase_event.purchase_order_odoo_true_id}}">
                                <t t-esc="po_odoo.name"/>
                            </a>
                        </li>
                        <li class="breadcrumb-item" t-if="not cashier">
                            <a t-attf-href="/nfcpurchase/view/purchase-event/{{purchase_event.purchase_order_odoo_true_id}}?pe_id={{purchase_event.id}}">
                                <span t-esc="purchase_event.name"/>
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <t t-esc="purchase_order.name"/>
                        </li>
                    </ol>
                </nav>

                <h1 class="mb-3">Purchase
                    <span t-esc="purchase_order.name"/>
                </h1>

                <nav class="nav nav-pills nav-fill">
                    <a class="nav-link active" aria-current="page" href="#sectionPurchase">Purchase</a>
