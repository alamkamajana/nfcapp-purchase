            <script>
                $(document).ready(function() {
                $('.nav-link').on('click', function(e) {
                e.preventDefault();
                $('.nav-link').removeClass('active');
                $('section').hide();
                $(this).addClass('active');
                var target = $(this).attr('href');
                $(target).show();
                });
